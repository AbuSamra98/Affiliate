@model Store.Base.Models.ViewModels.UserRoleViewModel
@{
    ViewData["Title"] = "EditRolesInUser";
}

<h1>Permissions for Admin</h1>



<form method="post">
    <input type="hidden" asp-for="@Model.UserId" />
    <div class="card">
        <div class="card-header">
            <h2>@Model.UserName Permissions</h2>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Claims.Count; i++)
            {
                <div class="form-check m-1">
                    @*<input type="hidden" asp-for="@Model.Roles[i].RoleId" />*@
                    <input type="hidden" asp-for="@Model.Claims[i].ClaimName" />
                    <input asp-for="@Model.Claims[i].IsSelected" class="form-check-input" />


                    <label class="form-check-label" asp-for="@Model.Claims[i].IsSelected">
                        @Model.Claims[i].ClaimName
                    </label>
                </div>
            }
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary"
                   style="width:auto" />
            <a asp-action="Index" class="btn btn-primary" style="width:auto">Cancel</a>
        </div>
    </div>
</form>