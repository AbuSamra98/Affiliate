@model Store.Base.Models.Vendor

@{
    ViewData["Title"] = "Details";
}

<h1>@ViewData["Title"]</h1>


<br />
<h2 class="text-info">Vendor Details</h2>

<div class="p-4 border rounded row">
    <div class="col-12">
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="User.FullName"></label>
            </div>
            <div class="col-8">
                <input asp-for="User.FullName" class="form-control" readonly />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="User.UserName"></label>
            </div>
            <div class="col-8">
                <input asp-for="User.UserName" class="form-control" readonly />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="User.Email"></label>
            </div>
            <div class="col-8">
                <input asp-for="User.Email" class="form-control" readonly />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="OrganizationAndCompany"></label>
            </div>
            <div class="col-8">
                <input asp-for="OrganizationAndCompany" class="form-control" readonly />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="WebsiteURL"></label>
            </div>
            <div class="col-8">
                <input asp-for="WebsiteURL" class="form-control" readonly />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="User.StartDate"></label>
            </div>
            <div class="col-8">
                <input asp-for="User.StartDate" readonly type="text" id="date" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Address"></label>
            </div>
            <div class="col-8">
                <input asp-for="Address" class="form-control" readonly />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="City"></label>
            </div>
            <div class="col-8">
                <input asp-for="City" class="form-control" readonly />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Country"></label>
            </div>
            <div class="col-8">
                <input asp-for="Country.Name" class="form-control" readonly />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Points"></label>
            </div>
            <div class="col-8">
                <input asp-for="Points" class="form-control" readonly />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="ZIP"></label>
            </div>
            <div class="col-8">
                <input asp-for="ZIP" class="form-control" readonly />
            </div>
        </div>
    </div>

</div>